.marquee_wp{
  margin: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.marquee_wp .marquee_item{
  width: 230rpx;
  height: 230rpx;
  margin: 0 10rpx 10rpx 0;
  opacity: .8;
  background: #1E9FD9;
  box-sizing: border-box;
}
.marquee_wp .marquee_item.on{
  opacity: 1;
}
.marquee_wp .marquee_item image{
  display: block;
  width: 100%;
  height: 100%;
}
.marquee_wp .marquee_item:nth-child(3n){
  margin-right: 0;
}
.marquee_wp .marquee_item_btn{
  background: transparent;
}
.marquee_wp .marquee_item_btn text{
  display: block;
  text-align: center;
  color: #fff;
}
