  <button class="free-button bg-blue round lg" bindtap="startLogin">开始演示</button>
  <free-judgeLogin 
  showLogin="{{showLogin}}"
  bgColor="{{bgColor}}"
  color="{{color}}"
  title="登录即可享受品质生活"
  ></free-judgeLogin>
</view>

