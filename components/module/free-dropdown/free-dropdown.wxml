<view class="free-dropdown">
  <view class="free-dropdown-menu {{borderBottom?'border-bottom':''}}"
  style="height:{{height}}rpx;"
  >
    <view class="free-dropdown-menu-item"  
    wx:for="{{menu}}" wx:key="index"
    bindtap="menuClick"
    data-index="{{index}}"
    >
      <view class="free-flex">
        <text class="free-dropdown-menu-item-text"
        style="color:{{item.disabled?'#c0c4cc':(index == current)?activeColor:inactiveColor}}"
        >{{item.title}}</text>
        <view class="free-dropdown-menu-item-arrow {{index === current?'rotate':''}}">
          <free-icon name="arrow-up-filling" size="18"
          color="{{item.disabled?'#c0c4cc':(index == current )?activeColor:inactiveColor}}"
          ></free-icon>
        </view>
      </view>
    </view>
    
    <view class="free-dropdown-content"
      style="z-index:{{contentStyle.zIndex}};opacity:{{contentStyle.opacity}};transition:all 0.3s linear;top:{{height}}rpx;height:{{contentHeight}}px;"
      
      >
        <view class="free-dropdown-content-drawer"
        style="transform:translateY({{active ? 0 : '-100%'}});transition-duration: 0.3s" catchtap="contentClick">
          <slot name="content{{current}}" ></slot>
        </view>
        <view class="free-dropdown-content-mask" catchtap="maskClick"></view>
    </view>
  </view>
</view> 