.free-dropdown{
  flex: 1;
  width: 100%;
  position: relative;
}
.free-dropdown .free-dropdown-menu{
  display: flex;
  position: relative;
  z-index: 11;
  height: 80rpx;
}
.free-flex{
  display: flex;
	align-items: center;
}
.free-dropdown .free-dropdown-menu .free-dropdown-menu-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  align-items: center;
}

.free-dropdown-menu-item-arrow{
  display: flex;
  flex-direction: column;
  margin-left: 6rpx;
  transition: transform .3s;
  align-items: center;
}
.rotate{
  transform: rotate(180deg);
} 

.free-dropdown-content{
  position: absolute;
  z-index: 8;
  width: 100%;
  left: 0px;
  bottom: 0;
  overflow: hidden;
}
.free-dropdown-content-mask{
  position: absolute;
  z-index: 9;
  background: rgba(0, 0, 0, .3);
  width: 100%;
  left: 0;
  top: 0;
  bottom: 0;
}
.free-dropdown-content-drawer{
  position: relative;
  z-index: 10;
  transition: all 0.3s;
  transform: translate3D(0, -100%, 0);
  overflow: hidden;
}
.border-bottom:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  pointer-events: none;
  box-sizing: border-box;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  width: 199.8%;
  height: 199.7%;
  -webkit-transform: scale(.5);
  transform: scale(.5);
  border-bottom: 2rpx solid #e4e7ed;  
  z-index: 2;
}