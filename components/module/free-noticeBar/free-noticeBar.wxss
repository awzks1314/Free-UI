.free-notice{
  width: 100%;
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 12rpx 30rpx;
}
.free-notice-icon{
  padding-right:10rpx;
}

.free-scorll-view{
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
}
.free-content{
  transform: translateX(100%);
}
.free-animation {
  -webkit-animation: free-rolling 8s linear infinite;
  animation: free-rolling 8s linear infinite;
}

@-webkit-keyframes free-rolling {
  0% {
    transform: translateX(100%);
  }

  100% {
    transform: translateX(-150%);
  }
}

@keyframes free-rolling {
  0% {
    transform: translateX(100%);
  }

  100% {
    transform: translateX(-150%);
  }
}

