.free-notices{
  width: 100%;
  height: 80rpx;
  padding: 12rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}
.free-swiper {
  font-size: 28rpx;
  height: 50rpx;
  flex: 1;
}
.free-swiper-item{
  display: flex;
  align-items: center
}

.free-news-item {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.fixed{
