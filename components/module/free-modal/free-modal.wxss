.free-modal-box {
  position: fixed;
  left: 50%;
  top: 50%;
  margin: auto;
  background: #fff;
  z-index: 9999998;
  transition: all 0.3s ease-in-out;
  opacity: 0;
  visibility: hidden;
  box-sizing: border-box;
}

.free-modal-scale {
		transform: translate(-50%, -50%) scale(0);
	}

	.free-modal-normal {
		transform: translate(-50%, -50%) scale(1);
	}

	.free-modal-show {
		opacity: 1;
		visibility: visible;
	}
.free-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999996;
  transition: all 0.3s ease-in-out;
  opacity: 0;
  visibility: hidden;
}

.free-mask-show {
  visibility: visible;
  opacity: 1;
}

.free-modal-title {
