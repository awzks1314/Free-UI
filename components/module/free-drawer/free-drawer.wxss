.free-drawer{
  position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
  overflow: hidden;
  z-index: 10074;
}
.free-drawer-content{
  position: absolute;
	z-index: 10075;
	transition:all 0.25s linear 0s;
}
.free-mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  transition: transform 0.3s;
}   
.free-mask.free-mask-show{
  opacity: 1;
}
.free-mask-zoom {
  transform: scale(1.2, 1.2);
}



.free-drawer-left {
	top: 0;
	bottom: 0;
	left: 0;
	transform: translate3D(-100%,0rpx,0rpx);
}

.free-drawer-right {
	right: 0;
	top: 0;
	bottom: 0;
	transform: translate3D(100%,0rpx,0rpx);
}

.free-drawer-top {
	top: 0;
	left: 0;
	right: 0;
	transform: translate3D(0rpx,-100%,0rpx);
}

.free-drawer-bottom {
	bottom: 0;
	left: 0;
	right: 0;
	transform: translate3D(0rpx,100%,0rpx);
}

.free-drawer-center {
	display: flex;
	flex-direction: column;
	bottom: 0;
	left: 0;
	right: 0;
	top: 0;
	justify-content: center;
	align-items: center;
	opacity: 0;
	z-index: 99999;
	background-color: transparent !important;
}
.free-drawer-center-box{
	min-width: 100rpx;
	min-height: 100rpx;
	position: relative;
}


.free-drawer-content-visible.free-drawer-center {
	transform: scale(1);
	opacity: 1;
}

.free-drawer__scroll-view{
	width: 100%;
	height: 100%;
}
.free-animation-zoo{
	transform: scale(1.15);
}

.free-drawer-content.free-drawer-content-visible {
	transform: translate3D(0px, 0px, 0px) !important;
}


.free-drawer-close{
	position: absolute;
	z-index: 3;
}

.close-top-left {
	top: 30rpx;
	left: 30rpx;
}

.close-top-right {
	top: 30rpx;
	right: 30rpx;
}

.close-bottom-left {
	bottom: 30rpx;
	left: 30rpx;
}

.close-bottom-right {
	right: 30rpx;
	bottom: 30rpx;
}

