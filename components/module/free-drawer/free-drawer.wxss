.free-drawer {
  visibility: hidden;
}

.free-drawer-show {
  visibility: visible;
}

.free-drawer-show .free-drawer-mask {
  display: block;
  opacity: 1;
}

.free-drawer-show .free-drawer-container {
  opacity: 1;
}
.free-drawer-show .free-drawer-containers {
  opacity: 1;
}
.free-drawer-show.free-drawer-left .free-drawer-container,
.free-drawer-show.free-drawer-right .free-drawer-container {
  transform: translate3d(0, -50%, 0);
}
.free-drawer-show.free-drawer-top .free-drawer-containers,
.free-drawer-show.free-drawer-bottom .free-drawer-containers {
  transform: translate3d(0, 0, 0);
}
.free-drawer-mask {
  opacity: 0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 8888;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out;
}

.free-drawer-container {
  position: fixed;
  left: 50%;
  height: 100%;
  top: 0;
  transform: translate3d(-50%, -50%, 0);
  transform-origin: center;
  transition: all 0.3s ease-in-out;
  z-index: 99999;
  opacity: 0;
  overflow-y: scroll;
  background: #fff;
  -webkit-overflow-scrolling: touch;
  -ms-touch-action: pan-y cross-slide-y;
  -ms-scroll-chaining: none;
  -ms-scroll-limit: 0 50 0 50;
}

.free-drawer-left .free-drawer-container {
  left: 0;
  top: 50%;
  transform: translate3d(-100%, -50%, 0);
}

.free-drawer-right .free-drawer-container {
  right: 0;
  top: 50%;
  left: auto;
  transform: translate3d(100%, -50%, 0);
}

.free-drawer-containers {
  position: fixed;
  width: 100%;
  height: 50%;
  left: 0;
  top: 0;
  transform: translate3d(-10%, 50%, 0);
  transform-origin: center;
  transition: all 0.3s ease-in-out;
  z-index: 99999;
  opacity: 0;
  overflow-y: scroll;
  background: #fff;
  -webkit-overflow-scrolling: touch;
  -ms-touch-action: pan-y cross-slide-y;
  -ms-scroll-chaining: none;
  -ms-scroll-limit: 0 50 0 50;
}
.free-drawer-top .free-drawer-containers {
  right: 0;
  bottom: 0;
  left: auto;
  transform: translate3d(0, -50%, 0);
}
.free-drawer-bottom .free-drawer-containers {
  right: 0;
  top: 50%;
  left: auto;
  transform: translate3d(0%, 50%, 0);
}