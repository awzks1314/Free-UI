page{
  background: #F1F8FA;
  width: 100%;
  height: 100%;
}
.avatar{
  position: relative;
  z-index: 10;
	width: 160rpx;
	height: 160rpx;
	border-radius: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
  background-color: #FFFFFF;
  box-shadow: 0 0 20rpx rgba(66,66,66,0.1);
}
.badgeLevel{
		position: absolute;
		right: -10rpx;
		bottom: -10rpx;
		background-color: #FFFFFF;
		border-radius: 50rem;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 24rpx;
		color: #FAB714;
		padding: 8rpx 16rpx;
		box-shadow: 0 0 20rpx rgba(66,66,66,0.1);
}
.vip{
  margin-left: 35rpx;
	padding: 10rpx 0 10rpx 30rpx;
  border-radius: 50rem 0 0 50rem;
  background-color: #FAB714;
}
.user-box {
	width: 100%;
	position: relative;
	border-radius: 8rpx;
	background-color: #ffffff;
	margin-top: -75rpx;
	padding-top: 105rpx;
	padding-bottom: 75rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 0 20rpx rgba(66,66,66,0.1);
}
.user-grid {
	flex: 1;
	display: flex;
	flex-direction: column;
	align-items: center;
	position: relative;
}
.user-grid::after {
  content: ' ';
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  border-right: 1rpx solid #919293;
  transform: scaleX(0.2) scaleY(0.5);
}

.user-grid:nth-last-child(1)::after {
  border-right: 0;
}
.qrcode{
  width: 350rpx;
  height: 350rpx;
}