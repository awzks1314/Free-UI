page{
  background: #F1F8FA;
  width: 100%;
  height: 100%;
}
.home-content{
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}
.homeHeader{
  position: relative;
}
.homeIntro{
  position: absolute; 
}
.entrance{
  position: relative;
  margin-top: -80rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
  box-shadow: 0 20rpx 20rpx -20rpx rgba(51, 51, 51, 0.1);
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item{
  position: relative;
}
.info{
  position: relative;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
  box-shadow: 0 20rpx 20rpx -20rpx rgba(51, 51, 51, 0.1);
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.left{
  color: #5A5B5C;
  height: 260rpx;
  padding: 0 20rpx;
  background-color: #F2F2E6;
}
.right{
  height: 260rpx;
}
.rightTop{
  background-color: #FDF3F2;
}
.rightBottom{
  background-color: #FCF6D4;
}