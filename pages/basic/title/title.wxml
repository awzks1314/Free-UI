
<free-title type="2" title="效果演示" titlecolor="#0081ef"></free-title>

<!-- 组件 -->
<free-title 
  title="默认标题"
  bold="{{bold}}"
  titlecolor="{{titlecolor}}"
  bottomColor="{{bottomColor}}"
  type="{{type}}"
  bgColor="{{bgColor}}"
  sub="default"
  
></free-title>
<!-- 组件 -->

<free-title type="2" title="参数配置"  titlecolor="#0081ef"></free-title>
<free-title icon='line' type='3'  bold="{{false}}" size='28' title="标题加粗" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{[true,false]}}" bind:click='getMode' data-name="bold" bold="true"></free-subsection>
</view>

<free-title icon='line' type='3'  bold="{{false}}" size='28' title="标题颜色" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{['#0081ef','red','orange']}}" bind:click='getMode' data-name="titlecolor" bold="true"></free-subsection>
</view>

<free-title icon='line' type='3'  bold="{{false}}" size='28' title="背景颜色" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{['#fff','yellow','olive','#000']}}" bind:click='getMode' data-name="bgColor" bold="true"></free-subsection>
</view>

<free-title icon='line' type='3'  bold="{{false}}" size='28' title="底部条颜色(样式1有效)" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{['#0081ef','red','orange']}}" bind:click='getMode' data-name="bottomColor" bold="true"></free-subsection>
</view>

<free-title icon='line' type='3'  bold="{{false}}" size='28' title="样式" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{['1','2','3']}}" bind:click='getMode' data-name="type" bold="true"></free-subsection>
</view>


<free-title icon='line' type='3'  bold="{{false}}" size='28' title="其他样式" height="40"></free-title>
<view class="">
  <free-title icon="home" type="" title="效果演示" titlecolor="#0081ef"></free-title>
  <free-title icon="dot" type="" title="效果演示" titlecolor="#0081ef"></free-title>
  <free-title icon="line" type="" title="效果演示" titlecolor="#0081ef"></free-title>
</view>
