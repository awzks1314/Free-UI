    <view class="bg-blue light flex margin-right"  wx:for="{{size}}" wx:key='index'>
      <view class="bg-orange light flex align-center {{item.name=='df'?'margin-tb':'margin-tb-'+item.name}}">
        <text>{{item.name}}</text>
      </view>
    </view>
  </view>
  <view class="free-bar  bg-white solid-bottom solid-top">
    <view class="free-title ">
      <free-icon name='filter' color='#0081ff' size='18'></free-icon>
      <text>内边距</text>
    </view> 
  </view>
  <view class="padding bg-white flex fle-wrap">
    <view class="bg-blue {{item.name=='df'?'padding':'padding-'+item.name}} light flex margin-right"  wx:for="{{size}}" wx:key='index'>
      <view class="bg-orange light flex align-center ">
