<view class="header free-style-list padding solid-bottom flex flex-direction bg-blue">
  <text class="tile ">Free UI</text>
  <text>一款轻量、开箱即用的原生微信小程序UI组件库</text>
</view>
<view class="free-list grid col-3 border shadow-main">
  <view wx:for="{{dataList}}" wx:key="index" class="free-item padding bg-white flex flex-direction justify-center align-center" >
    <text class=" text-{{item.color}} text-lg">{{item.number}}</text>
    <text class="padding-top-xs text-gray">{{item.name}}</text>
  </view>
</view>
 
<view class=" margin-top ">
  <free-list arrow="true" bind:click="detail" data-index="1">
    <free-icon name='rankfill'  color='#e54d42'></free-icon>
    <view class="free-list-name padding-left-xs">Github源码地址</view>
  </free-list> 
  <free-list arrow="true" bind:click="detail" data-index="2">
    <free-icon name='xiazai' color='#0081ff'></free-icon>
    <view class="free-list-name padding-left-xs">Gitee源码地址</view>
  </free-list>
  <free-list arrow="true" bind:click="detail" data-url="/pages/my/log/log">
    <free-icon name='news_hot_fill_light' color='#f37b1d'></free-icon>
    <view class="free-list-name padding-left-xs">更新日志</view>
  </free-list>
  <free-list arrow="true" bind:click="support" data-url="/pages/my/support/support">
    <free-icon name='likefill' color='#fbbd08'></free-icon>
    <view class="free-list-name padding-left-xs">赞赏支持</view>
  </free-list>
  <free-list arrow="true"  >
    <free-icon name='markfill' color='#39b54a'></free-icon>
    <view class="free-list-name padding-left-xs">意见反馈</view>
    <button open-type="contact" class="free-button free-list-right bg-white text-grey">给点建议</button>
  </free-list>
  <free-list arrow="true" bind:click="detail" data-url="/pages/my/about/about">
    <free-icon name='questionfill' color='#0081ff'></free-icon>
    <view class="free-list-name padding-left-xs">关于Free UI</view>
  </free-list>
</view>
