  <free-subsection list="{{[true,false]}}" bind:click='getMode' data-name="bold" bold="true"></free-subsection>
</view>

<free-title icon='line' type='3' titlecolor="#000" bold="{{false}}" size='28' title="选中标签颜色" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{['#0081EF','red','orange']}}" bind:click='getMode' data-name="selectedColor" bold="true"></free-subsection>
</view>

<free-title icon='line' type='3' titlecolor="#000" bold="{{false}}" size='28' title="滑块宽度" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{[34,40,46]}}" bind:click='getMode' data-name="sliderWidth" bold="true"></free-subsection>
</view>

<free-title icon='line' type='3' titlecolor="#000" bold="{{false}}" size='28' title="高度" height="40"></free-title>
