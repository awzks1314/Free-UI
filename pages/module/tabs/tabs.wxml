<free-title type="2" title="参数配置"></free-title>

<free-title icon='line' type='3' titlecolor="#000" bold="{{false}}" size='28' title="长列表渲染" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{[false,true]}}" bind:click='getMode' data-name="type" bold="true"></free-subsection>
