  <free-subsection list="{{['#fff', '#f4f5f7','#000']}}" bind:click='getMode' data-name="bgColor" bold="true"></free-subsection>
</view>

<free-title icon='line' type='3' titlecolor="#000" bold="{{false}}" size='28' title="选中字体是否加粗" height="40"></free-title>
