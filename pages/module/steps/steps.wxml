  <free-subsection list="{{[0,1,2,3]}}" bind:click='getMode' data-name="current" bold="true"></free-subsection>
</view>

<free-title icon='line' type='3' titlecolor="#000" bold="{{false}}" size='28' title="自定义样式：图标样式、数字样式、多级样式" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{['icon','number','more']}}" bind:click='getMode' data-name="type" bold="true"></free-subsection>
</view>



