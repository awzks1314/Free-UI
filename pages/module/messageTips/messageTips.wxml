
<free-title type="2" title="效果演示"></free-title>

<view class="padding text-center">
  <button class="free-button bg-blue" bindtap="open">查看效果</button>

  <!-- 组件 -->
  <free-message-tips 
  id="free-tips-position" 
  position="{{position}}"></free-message-tips>
  <!-- 组件 -->
</view>

<free-title type="2" title="参数配置"></free-title>
<free-title icon='line' type='3' titlecolor="#000" bold="{{false}}" size='28' title="有三种模式可供选择" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{['top', 'center','bottom']}}" bind:click='getMode' data-name="position" bold="true"></free-subsection> 
</view> 
 
<free-title icon='line' type='3' titlecolor="#000" bold="{{false}}" size='28' title="颜色" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{['blue', 'green','orange','red','grey']}}" bind:click='getMode' data-name="options.type" bold="true"></free-subsection>
</view>

<free-title icon='line' type='3' titlecolor="#000" bold="{{false}}" size='28' title="自定义内容" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{['默认消息提示', '自定义文本内容']}}" bind:click='getMode' data-name="options.msg" bold="true"></free-subsection>
</view>

<free-title icon='line' type='3' titlecolor="#000" bold="{{false}}" size='28' title="自动关闭/毫秒" height="40"></free-title>
<view class="padding">
  <free-subsection list="{{['2000', '4000','6000']}}" bind:click='getMode' data-name="options.duration" bold="true"></free-subsection>
</view>
